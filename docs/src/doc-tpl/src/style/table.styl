@import './var';

.kit-doc-table {
  width: 100%;
  font-size: 13px;
  line-height: 1.5;
  margin-bottom: 45px;
  background-color: #fff;
  border-collapse: collapse;
  color: $kit-doc-text-color;
  font-family: Source Code Pro,Monaco,Inconsolata,monospace;

  th {
    padding: 8px 10px;
    text-align: left;
    background-color: #f5f7fa;
    border: 1px solid $kit-doc-border-color;

    &:first-child {
      padding-left: 10px;
    }
  }

  td {
    padding: 8px;
    border: 1px solid $kit-doc-border-color;
  }
}
